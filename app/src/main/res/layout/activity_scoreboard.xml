<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreboardActivity"
    android:background="@drawable/background_main">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:background="@drawable/shape2"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yatra"
            android:text="SCOREBOARD"
            android:layout_marginBottom="-10dp"
            android:layout_marginHorizontal="7dp"
            android:textAlignment="center"
            android:textColor="@color/WhiteSmoke"
            android:textSize="40sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/nicknameTxt"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_border2"
                android:fontFamily="@font/yatra"
                android:hint="Nickname"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="15dp"

                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="@color/WhiteSmoke"
                android:textColorHint="@color/Gray"
                android:textSize="20sp" />



            <Button
                android:id="@+id/backButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:fontFamily="@font/yatra"
                android:text="Back"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/WhiteSmoke"
                android:textSize="20sp"
                app:cornerRadius="0dp"
                app:strokeColor="@color/WhiteSmoke"
                app:strokeWidth="2dp" />

        </LinearLayout>
        <SeekBar
            android:id="@+id/levelBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="20"
            android:progress="3"
            android:progressTint="@color/WhiteSmoke"
            android:progressBackgroundTint="@color/WhiteSmoke"
            android:thumb="@drawable/seekbar_thumb"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="70dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="7dp"
            android:background="@color/WhiteSmoke" />

        <ListView
            android:id="@+id/scoreView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_margin="7dp"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>